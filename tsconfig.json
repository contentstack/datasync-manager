{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declarationDir": "typings",
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },

    "typeRoots": [
      "node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "rootDirs": ["./src"],
    "skipLibCheck": true,
    "lib": ["es2015"],
  },
  "include": ["src/**/*"],
}